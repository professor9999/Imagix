<div class="container main " id="form">
    <div>
        <h3>
            <%=camp.name%>
        </h3>
        <h5>( Enter new comment )</h5>
    </div>
    <div>
        <form action="/campgrounds/<%=camp._id%>/comments" method="POST">
            <div class="form-group">
                <label for="exampleimage"></label>
                <input type="text" placeholder="Enter comment" name="comment" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <a style="font-size:13px" href="/campgrounds/<%=camp._id%>">Go back</a>
    </div>
</div>

